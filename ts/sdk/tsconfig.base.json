{
  "compilerOptions": {
    "target": "ES6",
    "noImplicitAny": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
